<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#FFF"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/btn_switch"
            android:layout_width="60dp"
            android:layout_height="45dp" android:visibility="invisible"
            android:layout_marginLeft="10dp"    android:layout_marginTop="15dp"
            android:text="切换1"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_switch1"
            android:layout_width="60dp"
            android:layout_height="45dp" android:visibility="invisible"
            android:layout_marginLeft="80dp"  android:layout_marginTop="15dp"
            android:text="切换2"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btn_switch2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="290dp"  android:layout_marginTop="10dp"
            android:text=""
            android:background="@drawable/location"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <fragment
            android:id="@+id/choose_area_fragment"
            android:name="com.coolweather.android.ChooseAreaFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>